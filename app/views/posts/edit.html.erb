<% provide(:title, "Edit Post") %>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Edit Post</h1>
      <%= form_for @post do |f| %>
        <%= render 'posts/error_messages' %>

        <%= render 'posts/edit_buttons' %>

        <div class="form-group voffset2">
          <%= f.label :title, 'Title' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body, 'Content' %>
          <small class="text-muted">
            (<a href="https://help.github.com/articles/markdown-basics/">Markdown</a> is supported)
          </small>
          <%= f.text_area :body, class: 'form-control' %>
        </div>

        <%= render 'posts/edit_buttons' %>

      <% end %>
    </div>
  </div>
</div>