<%= form_for @post do |f| %>
  <%= render 'posts/error_messages' %>

  <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body, 'Content' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <%= f.submit "Publish", class: "btn btn-primary" %>
<% end %>