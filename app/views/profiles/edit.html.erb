<% provide(:title, 'Editing ' + @profile.user.fullname) %>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Editing Profile</h1>
    </div>
    <div class="col-md-8">
      <div class="button-group pull-right">
        <%= link_to 'View profile', user_profile_path(@profile), class: 'btn btn-default voffset2-5' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <%= form_for([@profile.user, @profile]) do |f| %>
        <% if @profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :bio %><br>
          <%= f.text_area :bio %>
        </div>
        <div class="field">
          <%= f.label :areas %><br>
          <%= f.text_field :areas %>
        </div>
        <div class="field">
          <%= f.label :presidents %><br>
          <%= f.text_field :presidents %>
        </div>
        <div class="field">
          <%= f.label :service_start %><br>
          <%= f.date_select :service_start %>
        </div>
        <div class="field">
          <%= f.label :service_end %><br>
          <%= f.date_select :service_end %>
        </div>
        <div class="field">
          <%= f.label :facebook %><br>
          <%= f.text_field :facebook %>
        </div>
        <div class="field">
          <%= f.label :twitter %><br>
          <%= f.text_field :twitter %>
        </div>
        <div class="field">
          <%= f.label :g_plus %><br>
          <%= f.text_field :g_plus %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
  </div>
</div>