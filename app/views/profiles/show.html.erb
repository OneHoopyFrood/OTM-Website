<% provide(:title, @profile.user.fullname) %>

<div class="container">
  <div class="row voffset3">
    <div class="col-md-3">
      <div style="width: 100%; height: 300px; background-color: #ccc; text-align: center;">
        <i class="fa fa-user" style="position: relative; top: 10%; font-size: 16em"></i>
      </div>
      
    </div>
    <div class="col-md-9">
      <h1 class="voffset1"><%= @profile.user.fullname %></h1>
      <p>
        <% unless @profile.service_start.nil? && @profile.service_end.nil? %>
          Served from <%= @profile.service_start.to_s(:us_short_date) %> to <%= @profile.service_end.to_s(:us_short_date) %>
        <% else %>
          <span class="text-muted">Dates of service not set</span>
        <% end %>
      </p>
      <p>President(s): <%= @profile.presidents %></p>
      <p>Areas: <%= @profile.areas %></p>

      <%= markdown (@profile.bio || "") %>

      <%= link_to 'Edit', edit_user_profile_path(@profile) %>
    </div>
  </div>
</div>
